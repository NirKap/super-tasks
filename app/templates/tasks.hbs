   <style>
        table, tr {
        border: 1px solid black;
        text-align: center;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .task {
            display: block;
            position: relative;
            padding-left: 35px;
            margin-bottom: 12px;
            cursor: pointer;
            font-size: 22px;
            }
        /* Hide the browser's default checkbox */
        /*.task input {*/
        .task input {
        position: absolute;
        opacity: 0;
        cursor: pointer;
        height: 0;
        width: 0;
        }
        /* Create a custom checkbox */
        .checkmark {
          position: absolute;
        top: 0;
        left: 0;
        height: 25px;
        width: 25px;
        background-color: #eee;
        padding: 3px;
        border-radius: 5px;
        border: 0.4px solid black;
        }
        /* Hide the browser's default add button */
        .addButton {
        position: absolute;
        opacity: 0;
        cursor: pointer;
        height: 0;
        width: 0;
        }
         /* Create a custom add button */
        .newAddButton {
        position: relative;
        height: 25px;
        width: 25px;
        background-color: rgb(38, 206, 61);
        padding: 5px;
        border-radius: 5px;
        border: 0.8px solid black;
        }
        /* On mouse-over, add a grey background color to checkmark */
        .checkmark:hover {
        background-color: #ccc;
        }
    
        /* When the checkbox is checked, add a grey background */
        .container input:checked ~ .checkmark {
        background-color: rgb(103, 108, 117);
        }
        /* When the checkbox is checked, cross the task's text */
        .container input:checked ~.taskText{
        text-decoration: line-through;
        color: rgb(195, 205, 223);
        }
        /* Hide the browser's default delete button */
        .deleteButton {
        display:none;
        }
         /* Create a custom checkbox */
        .newDeleteButton {
        position: relative;
        top: 0;
        left: 0;
        height: 25px;
        width: 50px;
        background-color: rgb(212, 76, 35);
        padding: 5px;
        border-radius: 5px;
        border: 0.4px solid black;
        }
        /* On mouse-over, add a red background color to delele button*/
        .newDeleteButton:hover {
        background-color: rgb(187, 66, 66);
        }
    </style>
<table>
    <tr>
        <label type="addButton" checked="checked" onclick='newTask()'>
        <span class="newAddButton"></span>
        </label>
    </tr>

{{#each this.model as |taskUnit|}}
    <tr>
        <TaskListing @task={{taskUnit}} />
    </tr>
{{/each}}
</table>

